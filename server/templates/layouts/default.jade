include ../mixins/index

doctype html
html(lang="en")

	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")

		title= title || "Tom's Offices & Such"
		//- link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")

		link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css", rel="stylesheet")
		link(href='//cdnjs.cloudflare.com/ajax/libs/animate.css/3.1.1/animate.min.css', rel='stylesheet')
		link(rel='stylesheet', href='//code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css')
		link(rel='stylesheet', href='/dist/site.min.css')

		if user && user.canAccessKeystone
			link(href="/admin/styles/content/editor.min.css", rel="stylesheet")

		block css
		script(src='https://cdnjs.cloudflare.com/ajax/libs/tether/1.2.0/js/tether.min.js')
		script(src="//cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.js")
		script(src="//cdn.jsdelivr.net/respond/1.4.2/respond.min.js")
		script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js')
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/js/bootstrap.min.js", integrity="sha384-vZ2WRJMwsjRMW/8U7i6PWi6AlO1L79snBrmgiDpgIWJ82z8eA5lenwvxbMV1PAh7", crossorigin="anonymous")
		block head
	body(data-spy="scroll" data-target="#topNav")
		block intro
		+flash-messages(messages)
		unless tenet
			include ../components/base/nav
			block content
		else
			#tenet-wrapper
				include ../components/tenets/nav
				block content
		block js
		include ../components/base/footer

		script(src='//cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js')
		if user && user.canAccessKeystone
			script(src='/admin/js/content/editor.js')
			script.
				document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] +
				':35729/livereload.js?snipver=1"></' + 'script>')

		if sidebar
			script(src="/js/components/sidebar.js")

		
